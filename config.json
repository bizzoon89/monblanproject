{
  "src": "src",
  "dest": "assets",
  "minimizeCSS": true,
  "minimizeJS": true,
  "linters": {
    "css": true,
    "js": true
  },
  "webp": false,
  "styles": {
    "bundle": "style",
    "src": "styles",
    "dest": "css",
    "extension": "scss"
  },
  "scripts": {
    "bundle": "app",
    "src": "js",
    "dest": "js",
    "extension": "js",
    "static": false
  },
  "templates": {
    "src": "views",
    "dest": "./",
    "extension": "html",
    "dynamic": true
  },
  "static": {
    "fonts": {
      "src": "fonts"
    },
    "images": {
      "src": "images"
    }
  },
  "browsersync": {
    "watch": true,
    "files": ["*.html"],
    "server": {
      "baseDir": "../",
      "index": "index.html",
      "directory": true
    }
  }
}
